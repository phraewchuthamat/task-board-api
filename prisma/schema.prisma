// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  tasks     Task[]
  columns   Column[]
  createdAt DateTime @default(now())
}

model Column {
  id       String @id @default(uuid())
  title    String
  position Float // ใช้สำหรับเรียงลำดับ Column (ซ้าย-ขวา)
  color    String? // เก็บสีของ Column (optional)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  tasks Task[] // 1 Column มีหลาย Tasks

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String? @db.Text
  priority    String
  position    Float

  // --- เปลี่ยนจาก status String เป็นความสัมพันธ์กับ Column ---
  columnId String
  column   Column @relation(fields: [columnId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([columnId]) // เพิ่ม Index เพื่อให้ดึงงานใน Column เร็วขึ้น
}
